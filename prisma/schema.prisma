generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BusRoute {
  id                   String  @id @default(uuid())
  previous_id          Int     @unique // Legacy bus route id
  previous_parent_key  Int? // Legacy parent bus route id
  bus_route_number     String  @unique
  name                 String
  operator             String?
  operator_id          String?
  count_permit_holders Int?
  is_active            Boolean @default(true)

  created_at DateTime @default(now())

  PopularBusRoute PopularBusRoute[]
  starts_in       City              @relation("StartsInCity", fields: [starts_in_id], references: [id])
  starts_in_id    String
  ends_in         City              @relation("EndsInCity", fields: [ends_in_id], references: [id])
  ends_in_id      String
  City            City?             @relation(fields: [city_id], references: [id])
  city_id         String?
  itinerary       Itinerary[]
  timetable       Timetable[]

  @@map("bus_routes")
}

model PopularBusRoute {
  id              String @id @default(uuid())
  number_of_views Int    @default(0)

  bus_route    BusRoute @relation(fields: [bus_route_id], references: [id])
  bus_route_id String

  @@map("popular_bus_routes")
}

model City {
  id                  String  @id @default(uuid())
  ibge_code           Int     @unique
  name                String
  cover_url           String?
  count_origin_views  Int     @default(0)
  count_destiny_views Int     @default(0)

  starts_in BusRoute[] @relation("StartsInCity")
  ends_in   BusRoute[] @relation("EndsInCity")
  BusRoute  BusRoute[]

  @@map("cities")
}

model Place {
  id              String            @id @default(uuid())
  name            String
  legacy_id       Int
  place_itinerary Place_Itinerary[]

  @@map("places")
}

model Itinerary {
  id                  String @id @default(uuid())
  legacy_id           Int
  legacy_bus_route_id Int

  place_itinerary Place_Itinerary[]

  bus_route    BusRoute @relation(fields: [bus_route_id], references: [id])
  bus_route_id String

  @@map("itineraries")
}

model Place_Itinerary {
  id             String  @id @default(uuid())
  section_number Int
  is_access      Boolean

  itinerary    Itinerary @relation(fields: [itinerary_id], references: [id])
  itinerary_id String

  place    Place  @relation(fields: [place_id], references: [id])
  place_id String

  @@map("places_itineraries")
}

model Timetable {
  id        String   @id @default(uuid())
  direction String
  weekday   String
  starts_at DateTime

  bus_route    BusRoute @relation(fields: [bus_route_id], references: [id])
  bus_route_id String

  @@map("timetables")
}
